@{
    ViewData["Title"] = "Index/Form";
    var id = ViewData["id"];
    var idValidateMsg = ViewData["idValidateMsg"];
    var password = ViewData["password"];
    var passwordValidateMsg = ViewData["passwordValidateMsg"];
}

<div class="text-left">
    <h1 class="display-3">
        Form
    </h1>
    <p class="h4 mb-4">@ViewData["message"]</p>
    <form method="post" asp-controller="Hello" asp-action="Form">
        <div class="form-group">
            <label asp-for="@id" class="h5">ID</label>
            <label class="fw-bold text-danger">@idValidateMsg</label>
            <input asp-for="@id" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="@password" class="h5">Password</label>
            <label class="fw-bold text-danger">@passwordValidateMsg</label>
            <input asp-for="@password" type="password" class="form-control"/>
        </div>
        <p></p>
        <div class="form-group">
            <input type="submit" class="btn btn-primary"/>
        </div>
    </form>
</div>